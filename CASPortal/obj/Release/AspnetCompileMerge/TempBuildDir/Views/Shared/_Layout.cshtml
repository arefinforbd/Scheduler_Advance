@using CASPortal.Helper;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ServicePRO</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/plugins/metisMenu/metisMenu.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/plugins/timeline.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/sb-admin-2.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/plugins/morris.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/font-awesome-4.1.0/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Content/js/jquery-1.11.0.js")"></script>

    <link href="@Url.Content("~/Content/css/casportal.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/js/jquery-ui-1.11.1/jquery-ui.css")" rel="stylesheet" type="text/css" />

    @{
        if(!BaseHelper.AdvertisementStatus){
            <script>
                $(function () {
                    $("#mainDiv").html("<b>Processing...</b>");

                    $("#maintable").removeClass("col-lg-8");
                    $("#maintable").addClass("col-lg-12");
                    $("#ddlprivatefolder").removeClass("col-lg-6");
                    $("#ddlprivatefolder").addClass("col-lg-4");
                    $("#ddlpublicfolder").removeClass("col-lg-6");
                    $("#ddlpublicfolder").addClass("col-lg-8");
                });
            </script>
            <style>
                #advertisements{
                    display:none;
                }
                #applogo {
                    float: left !important;
                }
            </style>
        }
    }

</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">ServicePRO-Online</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-envelope fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-messages">
                        <li>
                            <a href="#">
                                <div>
                                    <strong>Subject 1</strong>
                                    <span class="pull-right text-muted">
                                        <em>Yesterday</em>
                                    </span>
                                </div>
                                <div>Test Message 1</div>
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="#">
                                <div>
                                    <strong>Subject 2</strong>
                                    <span class="pull-right text-muted">
                                        <em>Yesterday</em>
                                    </span>
                                </div>
                                <div>Test Message 2</div>
                            </a>
                        </li>
                    </ul>
                    <!-- /.dropdown-messages -->
                </li>
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/cas/Login/Logout"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href="/cas/CustomerInformation/WelcomeMessage"><i class="fa fa-sitemap fa-fw"></i> Home</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-dashboard fa-fw"></i> Main</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-table fa-fw"></i> Reports<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="#">Financial Reports</a>
                                </li>
                                <li>
                                    <a href="#">Accounting Reports</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="/cas/Scheduler"><i class="fa fa-files-o fa-fw"></i> Scheduler</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div class="mainDiv">
            @RenderBody()
        </div>
    <hr />
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <ul class="list-unstyled small">
                    <li>&copy; @DateTime.Now.Year - <a href="#">ServicePRO-Online Web Site</a></li>
                </ul>
            </div>
        </div>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="@Url.Content("~/Content/js/plugins/metisMenu/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/dataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/dataTables/dataTables.bootstrap.js")"></script>
    <script src="@Url.Content("~/Content/js/sb-admin-2.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.jclock.js")"></script>
    <script src="@Url.Content("~/Content/js/customerinformation.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery-ui-1.11.1/jquery-ui.js")"></script>

</body>
</html>
