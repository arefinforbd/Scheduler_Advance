@using CASPortal.Helper;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @BaseHelper.AppName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/plugins/morris.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/plugins/metisMenu/metisMenu.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/plugins/timeline.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/sb-admin-2.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/plugins/morris.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/font-awesome-4.1.0/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/build.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Content/js/jquery-1.11.0.js")"></script>

    <link href="@Url.Content("~/Content/css/casportal.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/js/jquery-ui-1.11.1/jquery-ui.css")" rel="stylesheet" type="text/css" />

    @{
        if(!BaseHelper.AdvertisementStatus){
            <script>
                $(function () {
                    $("#mainDiv").html("<b>Processing...</b>");

                    $("#maintable").removeClass("col-lg-8");
                    $("#maintable").addClass("col-lg-12");
                    $("#ddlprivatefolder").removeClass("col-lg-6");
                    $("#ddlprivatefolder").addClass("col-lg-4");
                    $("#ddlpublicfolder").removeClass("col-lg-6");
                    $("#ddlpublicfolder").addClass("col-lg-8");
                    $("#rightLogo").height($("#leftLogo").height());
                });
            </script>
            <style>
                #advertisements{
                    display:none;
                }
                #applogo {
                    float: left !important;
                }
            </style>
        }
    }

</head>
<body>
    <input type="hidden" id="hdnSiteURL" value="@BaseHelper.GetSiteUrl()" />
    <input type="hidden" id="hdnOnlyCAS" value="@BaseHelper.OnlyCAS" />

    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">@BaseHelper.AppName</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-envelope fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-messages">
                        <li>
                            <a href="#">
                                <div>
                                    <strong>Subject 1</strong>
                                    <span class="pull-right text-muted">
                                        <em>Yesterday</em>
                                    </span>
                                </div>
                                <div>Test Message 1</div>
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="#">
                                <div>
                                    <strong>Subject 2</strong>
                                    <span class="pull-right text-muted">
                                        <em>Yesterday</em>
                                    </span>
                                </div>
                                <div>Test Message 2</div>
                            </a>
                        </li>
                    </ul>
                    <!-- /.dropdown-messages -->
                </li>
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="" id="logoutMenu"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href="" id="homeMenu"><i class="fa fa-sitemap fa-fw"></i> Home</a>
                        </li>
                        <li>
                            <a href="#" id="mainMenu"><i class="fa fa-dashboard fa-fw"></i> Main</a>
                        </li>
                        <li>
                            <a href="#" id="reportMenu"><i class="fa fa-table fa-fw"></i> Reports<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="#" id="report101">Trend Analysis By Job</a>
                                </li>
                                <li>
                                    <a href="#" id="report102">Trend Analysis By Question</a>
                                </li>
                                <li>
                                    <a href="#" id="report103">Trend Analysis By Equip</a>
                                </li>
                                <li>
                                    <a href="#" id="report104">Trend Analysis Group Location</a>
                                </li>
                                <li>
                                    <a href="#" id="report105">Equipment Transaction</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="" id="schedulerMenu"><i class="fa fa-files-o fa-fw"></i> Scheduler</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div class="mainDiv">
            @RenderBody()
        </div>
    <hr />
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <ul class="list-unstyled small">
                    <li>&copy; @DateTime.Now.Year - <a href="#">@BaseHelper.AppName Web Site</a></li>
                </ul>
            </div>
        </div>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="@Url.Content("~/Content/js/plugins/metisMenu/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/dataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/dataTables/dataTables.bootstrap.js")"></script>
    <script src="@Url.Content("~/Content/js/sb-admin-2.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.jclock.js")"></script>
    <script src="@Url.Content("~/Content/js/customerinformation.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery-ui-1.11.1/jquery-ui.js")"></script>
    <script src="@Url.Content("~/Content/tree/jstree.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery-migrate-1.2.1.js")"></script>

    <!-- Flot Charts JavaScript -->
    <script src="@Url.Content("~/Content/js/plugins/flot/jquery.flot.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/flot/jquery.flot.pie.js")"></script>
    @*<script src="@Url.Content("~/Content/js/plugins/flot/flot-data.js")"></script>*@
    <script src="@Url.Content("~/Content/js/plugins/flot/jquery.flot.time.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/flot/jquery.flot.axislabels.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/flot/jquery.flot.orderBars.js")"></script>
    
    <!-- Morris Charts JavaScript -->
    <script src="@Url.Content("~/Content/js/plugins/morris/raphael.min.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/morris/morris.min.js")"></script>
    @*<script src="@Url.Content("~/Content/js/plugins/morris/morris-data.js")"></script>*@

    <script src="@Url.Content("~/Content/js/plugins/Chart.js")"></script>
    @*<script src="@Url.Content("~/Content/js/plugins/Chart.Line-Data.js")"></script>*@

    <script src="@Url.Content("~/Content/js/plugins/html2canvas/html2canvas.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/html2canvas/jquery.plugin.html2canvas.js")"></script>

    @{
        if (BaseHelper.AdvertisementStatus)
        {
            <script>
                $("#maintable").removeClass("col-lg-12");
                $("#maintable").addClass("col-lg-8");

                $("#divLeftSide").removeClass("col-lg-5");
                $("#divLeftSide").addClass("col-lg-6");
                $("#divRightSide").removeClass("col-lg-7");
                $("#divRightSide").addClass("col-lg-6");
                $("#ddlSites").css("margin-left", "");
                $("#ddlSites .btn-group .dropdown-Site span").css("font-size", "11px");
                $("#ddlArea").css("margin-left", "");

                $("#divTrendBy").css("margin", "");
                $("#divTrendBy").removeClass("col-lg-3");
                $("#divTrendBy").addClass("col-lg-5");

                $("#divRadioWeeks").css("clear", "both");
                $("#divRadioWeeks").removeClass("col-lg-2");
                $("#divRadioWeeks").addClass("col-lg-3");

                $("#divRadioMonths").removeClass("col-lg-2");
                $("#divRadioMonths").addClass("col-lg-3");
                
                $("#divJobDate").removeClass("col-lg-3");
                $("#divJobDate").addClass("col-lg-5");

                $("#divGroup").removeClass("col-lg-8");
                $("#divGroup").addClass("col-lg-10");
            </script>
        }
    }
</body>
</html>
