@using CASPortal.Helper;

<div class="row">
    <div class="col-lg-4 col-sm-4 col-xs-4 col-md-4">
        <div class="panel panel-primary panelUpperLogo">
            <div class="panel-heading text-center">
                <div class="row">
                    @{
                        var base64 = Convert.ToBase64String(ViewBag.ByteImage);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <img id="leftLogo" class="img-responsive" src="@imgSrc" alt="" style="max-width:50%;" />

                </div>
            </div>
            <a>
                <div class="panel-footer">
                    <span class="pull-left small"><span id="livedateTime"></span></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-4 col-sm-4 col-xs-4 col-md-4" id="applogo">
        <div class="panel panel-yellow panelUpperLogo">
            <div class="panel-heading text-center">
                <div class="row">
                    <img id="rightLogo" class="img-responsive text-center" src="@Url.Content(BaseHelper.LogoUrl)" alt="" style="max-width:50%;" />
                </div>
            </div>
            <a>
                <div class="panel-footer">
                    <span class="pull-left small">@BaseHelper.VersionNo </span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>

