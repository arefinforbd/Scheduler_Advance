
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ServicePRO--Login</title>

    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/plugins/metisMenu/metisMenu.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/sb-admin-2.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />

    <style>
        .validation-summary-errors{
            color: #FF0000;
        }
    </style>

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-yellow">
                    <div class="panel-heading">
                        <center>
                            <img class="img-responsive" src="@Url.Content("~/Content/images/logo.jpg")" alt="" style="max-width:50%;" />
                            <h3 style="font-family: Verdana,Arial,Helvetica,sans-serif;" class="panel-title"><strong>Customer Access System</strong></h3>
                        </center>
                    </div>
                    <div class="panel-body">

                        @using (Html.BeginForm("Index", "Login"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Company Id" name="companyid" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Company Password" name="companypassword" type="password" value="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Customer Id" name="customerid" type="text">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Customer Password" name="customerpassword" type="password" value="">
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-primary btn-block">Login</button>
                            </fieldset>                            
                        }
                    </div>
                    <div class="panel-footer small text-center">
                        <strong>© TEMISOFT PTY LTD 1997 - @DateTime.Now.Year.</strong>
                        <br />
                        All Rights Reserved.
                        <br />
                        <a id="temisoftwebsite" style="color:#428bca;" href="http://www.temisoft.com/" target="_blank">ServicePRO-Online Web Site</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Content/js/jquery-1.11.0.js")"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/metisMenu/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/Content/js/sb-admin-2.js")"></script>

</body>

</html>
